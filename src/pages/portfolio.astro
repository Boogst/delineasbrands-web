      </a>
      <a
        data-pswp-width="1920"
        data-pswp-height="1080"
        href="/images/projects/COLCRANES.webp"
      >
        <img
          class="hover:scale-105 transition-transform border w-full aspect-video mb-6"
          src="/images/projects/COLCRANES.webp"
          alt="Imagen de proyecto Colcranes"
        />
      </a>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  import PhotoSwipeLightbox from "photoswipe/lightbox";
  import "photoswipe/style.css";

  const lightbox = new PhotoSwipeLightbox({
    gallery: "#my-gallery",
    children: "a",
    pswpModule: () => import("photoswipe"),
  });
  lightbox.init();
</script>
