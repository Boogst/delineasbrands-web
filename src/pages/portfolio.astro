---
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Delineas Brands | Portafolio">
  <Header />
  <main class="container mx-auto p-4 pt-10 sm:px-24 space-y-4">
    <h1 class="text-center text-primary font-black text-4xl md:text-5xl">
      Portafolio
    </h1>
    <div class="gap-8 columns-1 md:columns-2 lg:columns-3" id="my-gallery">
      <a
        data-pswp-width="1920"
        data-pswp-height="1080"
        href="/images/projects/2B.webp"
      >
        <img
          class="hover:scale-105 transition-transform border w-full aspect-video mb-6"
          src="/images/projects/2B.webp"
          alt="Imagen de proyecto 2B Soluctions"
        />
      </a>
      <a
        data-pswp-width="2250"
        data-pswp-height="2250"
        href="/images/projects/KP.webp"
      >
        <img
          class="hover:scale-105 transition-transform border w-full aspect-square mb-6"
          src="/images/projects/KP.webp"
          alt="Imagen de proyecto Key Property"
        />
      </a>
      <a
        data-pswp-width="2250"
        data-pswp-height="2250"
        href="/images/projects/STECKERL-2.webp"
      >
        <img
          class="hover:scale-105 transition-transform border w-full aspect-square mb-6"
          src="/images/projects/STECKERL-2.webp"
          alt="Imagen de proyecto Steckerl"
        />
      </a>
      <a
        data-pswp-width="2250"
        data-pswp-height="2250"
        href="/images/projects/INOXCENTER.webp"
      >
        <img
          class="hover:scale-105 transition-transform border w-full aspect-square mb-6"
          src="/images/projects/INOXCENTER.webp"
          alt="Imagen de proyecto Inoxcenter"
        />
      </a>
      <a
        data-pswp-width="1920"
        data-pswp-height="1080"
        href="/images/projects/ACESCO.webp"
      >
        <img
          class="hover:scale-105 transition-transform border w-full aspect-video mb-6"
          src="/images/projects/ACESCO.webp"
          alt="Imagen de proyecto Acesco"
        />
      </a>
      <a
        data-pswp-width="1920"
        data-pswp-height="1080"
        href="/images/projects/H&A.webp"
      >
        <img
          class="hover:scale-105 transition-transform border w-full aspect-video mb-6"
          src="/images/projects/H&A.webp"
          alt="Imagen de proyecto Hierros y Aceros"
        />
      </a>
      <a
        data-pswp-width="1920"
        data-pswp-height="1080"
        href="/images/projects/SES.webp"
      >
        <img
          class="hover:scale-105 transition-transform border w-full aspect-video mb-6"
          src="/images/projects/SES.webp"
          alt="Imagen de proyecto SES"
        />
      </a>
      <a
        data-pswp-width="2250"
        data-pswp-height="2250"
        href="/images/projects/NB.webp"
      >
        <img
          class="hover:scale-105 transition-transform border w-full aspect-square mb-6"
          src="/images/projects/NB.webp"
          alt="Imagen de proyecto Nicoll Beauty"
        />
      </a>
      <a
        data-pswp-width="1920"
        data-pswp-height="1080"
        href="/images/projects/SF.webp"
      >
        <img
          class="hover:scale-105 transition-transform border w-full aspect-video mb-6"
          src="/images/projects/SF.webp"
          alt="Imagen de proyecto San Francisco"
        />
      </a>
      <a
        data-pswp-width="2250"
        data-pswp-height="2250"
        href="/images/projects/SERVIPARAMO.webp"
