---
const { target, class: className } = Astro.props;
---

<dialog
  id={target}
  role="dialog"
  tabindex="-1"
  aria-hidden="true"
  class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-full max-h-full bg-transparent"
>
  <div
    class:list={[
      "relative bg-white rounded-lg shadow h-auto max-h-[calc(100%-1rem)]",
      className,
    ]}
  >
    <button
      type="button"
      class="text-primary bg-transparent hover:text-secondary rounded-lg text-sm w-8 h-8 ml-auto inline-flex justify-center items-center absolute top-0 right-0 z-10"
      data-modal-hide={target}
    >
      <svg
        class="w-3 h-3"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 14"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"></path>
      </svg>
      <span class="sr-only">Close modal</span>
    </button>
    <slot />
  </div>
</dialog>
