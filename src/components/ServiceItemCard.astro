---
const { title, description, imageFront, imageBack } = Astro.props;
---

<li>
  <article
    class="service-card py-16 px-4 border-2 border-primary flex flex-col gap-3 items-center justify-center rounded-md text-center hover:scale-105 transition w-full h-full"
  >
    <picture class="service-card__image">
      <img src={imageFront} alt={title} class="service-card__image--front" />
      <img src={imageBack} alt={title} class="service-card__image--back" />
    </picture>
    <h3 class="text-secondary font-bold text-2xl">{title}</h3>
    <p>{description}</p>
  </article>
</li>

<style lang="css">
  .service-card {
    text-wrap: balance;
  }

  .service-card__image {
    transform-style: preserve-3d;
    transition: transform 0.8s;
    width: 112px;
    height: 112px;
    position: relative;
  }

  .service-card__image--front,
  .service-card__image--back {
    position: absolute;
    top: 0;
    left: 0;
    backface-visibility: hidden;
  }

  .service-card__image .service-card__image--back {
    transform: rotateY(180deg);
  }

  .service-card:hover .service-card__image {
    transform: rotateY(180deg);
  }
</style>
